#
# file: /etc/nginx/sites-available/chuome
# 网站配置
#

server {
    listen 80;
    server_name chuo.me;
    root   /home/popomore/site/chuome/_site;

    #ssl_certificate /etc/nginx/server.crt;
    #ssl_certificate_key /etc/nginx/server.key;

    access_log  /home/popomore/log/chuo.me.access.log;
    error_log  /home/popomore/log/chuo.me.error.log;

    location / {
        index index.html;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
        expires max;
        log_not_found off;
    }
}
